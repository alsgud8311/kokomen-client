{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "paths": {
      "@kokomen/ui/*": ["./packages/ui/src/*"]
    }
  },
  "references": [{ "path": "./packages/ui/src" }],
  "include": ["**/*.ts", "**/*.tsx"]
}
